{
  "name": "react-scaffolding",
  "version": "0.0.1",
  "description": "React Scaffolding",
  "repository": "https://github.com/dsicher/react-scaffolding.git",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=PRODUCTION webpack --config webpack.config.prod.js",
    "postbuild": "npm run build:assets && npm run build:index",

    "build:assets": "cp -r src/assets dist/assets",
    "build:index": "cp index.html dist",
    "start": "node src/server.js"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.9.1",
    "react": "^15.0.2",
    "react-addons-css-transition-group": "^15.0.2",
    "react-addons-shallow-compare": "^15.1.0",
    "react-dom": "^15.0.2",
    "resolve-url": "^0.2.1",
    "resolve-url-loader": "^1.4.3",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "devDependencies": {
    "figlet": "^1.1.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.2.4"
  }
}
